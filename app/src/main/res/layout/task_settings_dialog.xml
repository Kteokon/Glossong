<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp" >

                <ImageButton
                    android:id="@+id/saveButton"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentStart="true"
                    android:scaleType="centerInside"
                    android:cropToPadding="false"
                    android:src="@drawable/save_changes"
                    android:background="#00FFFFFF"
                    app:tint="@color/button" />

                <ImageButton
                    android:id="@+id/closeButton"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_toRightOf="@+id/saveButton"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:cropToPadding="false"
                    android:src="@drawable/cancel_changes"
                    android:background="#00FFFFFF"
                    android:layout_marginStart="10sp"
                    app:tint="@color/button" />
            </RelativeLayout>

            <TextView
                android:id="@+id/wordsAmountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Количество слов:" />

            <com.google.android.material.slider.Slider
                android:id="@+id/wordsAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:enabled="true"
                android:valueFrom="2"
                android:valueTo="3"
                android:stepSize="1"/>

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="10sp"-->
<!--                android:layout_marginStart="10sp"-->
<!--                android:layout_marginEnd="10sp"-->
<!--                android:gravity="center"-->
<!--                android:text="Сложность:" />-->

<!--            <Spinner-->
<!--                android:id="@+id/taskDifficulty"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="10sp"-->
<!--                android:layout_marginStart="10sp"-->
<!--                android:layout_marginEnd="10sp" />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>