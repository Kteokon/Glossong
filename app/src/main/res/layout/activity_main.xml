<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EBFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/menuButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/taskButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="#00FFFFFF"
            android:cropToPadding="false"
            android:padding="4sp"
            android:scaleType="centerInside"
            android:src="@drawable/task_button"
            app:tint="#8F94F8" />

        <ImageButton
            android:id="@+id/dictionaryButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/taskButton"
            android:layout_marginStart="10sp"
            android:background="#00FFFFFF"
            android:cropToPadding="false"
            android:padding="4sp"
            android:scaleType="centerInside"
            android:src="@drawable/dictionary_icon"
            app:tint="#8F94F8" />

        <ImageButton
            android:id="@+id/notesButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/dictionaryButton"
            android:background="#00FFFFFF"
            android:cropToPadding="false"
            android:padding="4sp"
            android:scaleType="centerInside"
            android:src="@drawable/note_icon"
            app:tint="#8F94F8" />

        <ImageButton
            android:id="@+id/addSongButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_alignParentEnd="true"
            android:background="#00FFFFFF"
            android:cropToPadding="false"
            android:padding="5sp"
            android:scaleType="centerInside"
            android:src="@drawable/add_song"
            app:tint="#8F94F8" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:dividerHeight="10sp"
        app:layout_constraintBottom_toTopOf="@+id/nowPlaying"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuButtons"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/nowPlaying"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>